@model IEnumerable<FavoriteRestaurantsCapstone.Models.Restaurants>

@{ ViewData["Title"] = "Index"; }

<script src="https://cdn.jsdelivr.net/npm/jquery@3.3.1/dist/jquery.min.js"></script>
<link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/fomantic-ui@2.8.8/dist/semantic.min.css">
<script src="https://cdn.jsdelivr.net/npm/fomantic-ui@2.8.8/dist/semantic.min.js"></script>
<html>
<body style="height:1500px" class="background teal">
    <h1 class="ui huge header ui huge header blue">Michigan's Best Restaurants</h1>

    <p>
        <a class="ui green button"asp-action="Create">Create New</a>
    </p>
    <form asp-action="Index" method="get">
        <div class="form-actions no-color">
            <p>
                Search by Restaurant Name: <input type="text" name="SearchString" value="@ViewData["currentFilter"]" />
                <input type="submit" value="Search" class="btn btn-default" />
                <a class="ui red button" asp-action="Index">Reset Table</a>
            </p>
        </div>
    </form>
    <table class="ui inverted celled striped padded table">
        <thead class="ui yellow">
            <tr>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]">@Html.DisplayNameFor(model => model.RestaurantName)</a>
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StreetAddress)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.City)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CuisineType)
                </th>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["CostSortParm"]">@Html.DisplayNameFor(model => model.AverageCost)</a>
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MenuItems)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
<tr>
    <td class="collapsing">
        <div class="ui fitted slider checkbox">
            <input type="checkbox"> <label></label>
        </div>
    </td>

    <td>
        @Html.DisplayFor(modelItem => item.RestaurantName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.StreetAddress)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.City)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.CuisineType)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.AverageCost)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.MenuItems)
    </td>
    <td>
        <a class="ui yellow button" asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
        <a class="ui grey button" asp-action="Details" asp-route-id="@item.ID">Details</a> |
        <a class="ui red button" asp-action="Delete" asp-route-id="@item.ID">Delete</a>
    </td>
</tr>
}
        </tbody>
    </table>
</body>
</html>